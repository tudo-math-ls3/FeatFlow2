#!/bin/sh

date="`date +%y`"/"`date +%m`"
build="`date +%Y%m%d`"

../../bin/configure \
	--appname=flagship \
	--programfile=src/flagship.f90 \
	--srclist_app="`ls src/*.f90 src/models/*/*.f90 src/kernel/*.f90`" \
        --header-files-to-copy=src/models/euler/euler.h,src/kernel/thermodynamics.h \
	--apponlyflags="-DVERSION=\\\"${date}\\\",-DBUILD=\\\"${build}\\\",-DTRANSP_USE_IBP,-DEULER_USE_IBP"\
	$@
