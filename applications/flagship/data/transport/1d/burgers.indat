# -*- mode: any-ini; -*-

################################################################################
#                     Input parameters for the FEM-AFC solver                  #
#                                                                              #
#                              Burgers equation in 1D                          #
#                                                                              #
################################################################################

# Specify the initial solution
deffunc: @initsol = if(x > 0.2 & x < 0.7, 1.0, 0.0) ; x,t

# Specify the exact solution
deffunc: @exactsol_func   = if(x-t >= 0.2 & x-t <= 0.4, 1.0, 0.0) ; x,t
deffunc: @exactsol_derivx = 0 ; x,t

# Specify the diffusion coefficient
deffunc: @diffusion = 1e-3 ; x,t

# Specify the boundary conditions for the primal problem
[bdrcond_primal]
NBCT
2
NEXPR
1
IBCT
1
NCOMP
1
IBCT
2
NCOMP
1
PARAMETERS
0.0  T  'FLUX_WEAK'  0.0
0.0  T  'FLUX_WEAK'  0.0
