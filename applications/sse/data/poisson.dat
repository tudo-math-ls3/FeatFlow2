# -*- mode: any-ini; -*-

################################################################################
# This is the main configuration file for the Poisson problem
################################################################################
[POISSON]
################################################################################

# Problem sub-type
#
# =0: Pure Dirichlet problem
# =1: Mixed Dirichlet-Neumann problem
# =2: Pure Neumann problem
PROBLEMSUBTYPE = 0

# Problem configuration (parameters)
PROBLEMCONFIG = POISSON-%{POISSON.PROBLEMSUBTYPE}

# Problem triangulation and discretisation
PROBLEMTRIADISCR = POISSON_P1

################################################################################
[POISSON-0]
################################################################################

# Problem specific constants

dpoisson   = 1.0
ddirichlet = 3.0

################################################################################
[POISSON-1]
################################################################################

# Problem specific constants

dpoisson   = 1.0
ddirichlet = 3.0
dneumann   = 0.0

################################################################################
[POISSON-2]
################################################################################

# Problem specific constants

dpoisson   = 1.0
dneumann   = 0.0

################################################################################
[POISSON_P1]
################################################################################

# Boundary parametrisation
PRMFILE = TRIA.prm

# Domain triangulation
TRIFILE = TRIA.tri

# Element type
ELEMENTTYPE = EL_P1

# Cubature type
CUBATURETYPE = QG3_T

