#########################################################################
#
#			TARGET DEFINITION
#
#########################################################################
#
# The main target builds the inshape .a library file
all: $(INSHAPE_LIB_FILE)
#########################################################################
#
# This target builds only the inshape kernel
kernel: $(KERNEL_OBJ)  
#########################################################################
#
# This target builds the opennurbs object files
opennurbs : $(ON_OBJ)
#########################################################################
#
# The zlib target builds the zlib library required by opennurbs
zlib: $(ZLIB_OBJ)

.PHONY:	default1
default1: $(INSHAPE_LIB_FILE)


#########################################################################
#
# Finally targets for 'clean up' are provided
clean :
	-$(RM) $(INSHAPE_LIB_FILE)
	-$(RM) $(KERNEL_OBJ)  
	-$(RM) $(ON_OBJ)
	-$(RM) $(ZLIB_OBJ)

clean-kernel : 
	-$(RM) $(KERNEL_OBJ)

clean-opennurbs : 
	-$(RM) $(ON_OBJ)

clean-zlib : 
	-$(RM) $(ZLIB_OBJ)

#########################################################################
#
# These targets prescribe how the main targets should be build
$(ZLIB_OBJ) : $(ZLIB_INC)

$(ON_OBJ) : $(ON_INC)

$(KERNEL_OBJ): $(KERNEL_INC)

$(INSHAPE_LIB_FILE) : $(KERNEL_OBJ) $(ON_OBJ) $(ZLIB_OBJ)
	@echo "Building <$(OPENNURBS_LIB_FILE)>" 
	-$(RM) $@
	$(AR) $@ $(KERNEL_OBJ) $(ON_OBJ) $(ZLIB_OBJ)  
	$(RANLIB) $@
	

