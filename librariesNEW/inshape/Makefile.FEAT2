SRCDIR=src
INSHAPE_LIB_NAME = inshape2d
INSHAPE_LIB_FILE = $(OBJDIR)/lib$(INSHAPE_LIB_NAME).a

# In order to get full wide character (UNICODE) support, we
# need to define _GNU_SOURCE
# C compiler and flags
CC = gcc
CFLAGS = -g -Wall -c -D_GNU_SOURCE -DMY_ZCALLOC -DZ_PREFIX -I.  
OPTCFLAGS = -O -Wall -D_GNU_SOURCE -DMY_ZCALLOC -DZ_PREFIX -I.  

# C++ compiler and flags
CCC = g++
CCFLAGS = -g -Wall -c -D_GNU_SOURCE -I. -I./src -I./include -I../opennurbs
OPTCCFLAGS = -O -Wall -D_GNU_SOURCE -I.
LDFLAGS = -L. 

###############################################################
# We will need this set of rules to build our targets
#
%.o: %.cpp
	$(CCC) $(CCFLAGS) -c $< -o $@

$(OBJDIR)/%.o: $(SRCDIR)/%.cpp
	$(CCC) $(CCFLAGS) -c $< -o $@

$(OBJDIR)/%.o: $(ONDIR)/%.cpp
	$(CCC) $(CCFLAGS) -c $< -o $@

$(OBJDIR)/%.o: $(ONDIR)/%.c
	$(CCC) $(CCFLAGS) -c $< -o $@

$(OBJDIR)/%.o: $(ZLIBDIR)/%.c
	$(CC) $(CFLAGS) -c $< -o $@
